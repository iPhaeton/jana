<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel='stylesheet' href="/build/common.css"/>

    <!--Picturefill-->
    <script>
      document.createElement( "picture" );
    </script>
    <script src="/vendor/bower_components/picturefill/dist/picturefill.js" async></script>
  </head>

  <body>

    <div class="header">
        <%- partial("../public/components/headMenu/headMenu.ejs")%>
    </div>

    <div class="jumbotron showcase">
      <div class="showcase__image">
        <!--<img src="/images/showcase_big.jpg">-->
        <picture>
          <%if (env === "production") {%>
            <source srcset="/images/showcase_small.jpg" media="(max-width: 480px)">
            <source srcset="/images/showcase_medium.jpg" media="(max-width: 1024px)">
          <%} else {%>
            <source srcset="/images/showcase_small_t.jpg" media="(max-width: 480px)">
            <source srcset="/images/showcase_medium_t.jpg" media="(max-width: 1024px)">
          <%}%>
          <img srcset="/images/showcase_big.jpg">
        </picture>
      </div>
    </div>

    <script src="/build/common.js"></script>
    <script src="/build/index.js"></script>

  </body>
</html>
